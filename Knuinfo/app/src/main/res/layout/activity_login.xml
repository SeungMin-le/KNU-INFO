<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:backgroundTint="#FDFBFB"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="16dp">

        <!-- 이미지 추가 -->
        <ImageView
            android:layout_marginTop="-70dp"
            android:layout_marginLeft="-50dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/circle"
            ></ImageView>

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvHello"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="95dp"
            android:text="KNU INFO"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35sp" />

        <!-- 로그인 제목-->
        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etIDbox"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />
        <!-- 아이디 입력 editText -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etIDbox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/etPasswordbox"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_person"
            android:hint=" 아이디"
            android:paddingLeft="20dp"
            android:singleLine="true" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 비밀번호 입력 editText -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordbox"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_lock"
            android:hint=" 비밀번호"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:singleLine="true" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordbox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:height="50dp"
            android:background="@drawable/button"
            android:text="로그인"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000" />

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/btnJoin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:height="50dp"
            android:background="#00ff0000"
            android:text="회원가입"
            android:textColor="#787878"
            android:textAlignment="center" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

