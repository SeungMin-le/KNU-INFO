<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MymenuActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-72dp">
        <TextView
            android:id="@+id/mymenutitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:text="비밀번호 확인"
            android:layout_centerHorizontal="true"
           android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etmpass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/mymenutitle"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext"
        android:drawableRight="@drawable/ic_lockopen"
        android:hint=" 비밀번호"

        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        tools:ignore="MissingConstraints">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnmcheck"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:height="50dp"
            android:background="@drawable/button"
            android:layout_below="@+id/etmpass"
            android:text="확인"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>