<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    android:backgroundTint="#FDFBFB"
    tools:context=".JoinActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-72dp">

        <ImageView
            android:layout_marginTop="-70dp"
            android:layout_marginLeft="-50dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/circle"
            ></ImageView>

        <TextView
            android:id="@+id/tvjointitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:text="KNU INFO"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/etjoinName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tvjointitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:hint=" 이름"
            android:paddingLeft="20dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/etJid"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below ="@+id/etjoinName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:hint=" 아이디"
            android:paddingLeft="20dp"
            android:singleLine="true"
            />


        <EditText
            android:id="@+id/etJpass"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etJid"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/ic_lock1"
            android:background="@drawable/edittext"
            android:hint=" 비밀번호"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/etjoinPasswordCheck"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etJpass"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/ic_lock1"
            android:background="@drawable/edittext"
            android:hint=" 비밀번호 확인"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/etjoinPhonenum"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etjoinPasswordCheck"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:hint=" 전화번호"
            android:paddingLeft="20dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/etjoinEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/etjoinPhonenum"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:hint=" 이메일"
            android:paddingLeft="20dp"
            android:singleLine="true"
            />
        <Button
            android:id="@+id/btnJjoin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etjoinEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:height="50dp"
            android:background="@drawable/button"
            android:text="가입하기"
            android:textAlignment="center" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

